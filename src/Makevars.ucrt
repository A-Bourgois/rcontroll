GSL_version=2.7
CRT=-ucrt
PKG_CPPFLAGS= -I../windows/gsl-${GSL_version}/include -I../inst/include
PKG_LIBS= -L../windows/gsl-${GSL_version}/lib${R_ARCH}${CRT} -lgsl -lgslcblas

all: clean winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R ${GSL_version}"

clean:
	rm -f $(SHLIB) $(OBJECTS)