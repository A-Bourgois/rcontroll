VERSION = 2.7
CRT=-ucrt
RWINLIB = ../windows/gsl-$(VERSION)

PKG_CPPFLAGS = -I ../inst/gsl/include \
	
	
PKG_LIBS = -O3 -Wall -pedantic -L ../inst/gsl/lib$(R_ARCH)${CRT} -lgsl -lgslcblas

all: clean winlibs

winlibs:
	mkdir -p ../inst/gsl
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" --vanilla "../tools/winlibs.R" $(VERSION)
	cp -r "$(RWINLIB)" ../inst/gsl

clean:
	rm -f $(SHLIB) $(OBJECTS)

.PHONY: all winlibs clean